<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
	<table class="scoreboard__paginator">
		<tbody>
			<fest:script>
				<![CDATA[
					var flag1 = false;
					if (data.page - 1 > data.step) {
						flag1 = true;
					} else {
						flag1 = false;
					}

					var flag2 = false;
					if (data.count - data.page > data.step) {
						flag2 = true;
					} else {
						flag2 = false;
					}
				]]>
			</fest:script>

			<fest:if test="flag1">
				<fest
				<fest:text>1</fest:text>
				<fest:text>...</fest:text>
				<fest:value>data.page</fest:value>
			</fest:if>
			<fest:if test="!flag1">
				<fest:for from="1" to="data.page" index="i">
					<fest:value>i</fest:value>
				</fest:for>
			</fest:if>

			<fest:if test="flag2">
				<fest:text>...</fest:text>
				<fest:value>data.count</fest:value>
			</fest:if>
			<fest:if test="!flag2">
				<fest:for from="data.page + 1" to="data.count" index="i">
					<fest:value>i</fest:value>
				</fest:for>
			</fest:if>
		</tbody>
	</table>
</fest:template>
